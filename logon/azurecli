[core]
# Can be one of json, jsonc, tsv, or table.
output=table
location	string	The default location to use for all commands.

[logging]
enable_log_file=yes
log_dir=/az-logs

[defaults]
# See https://docs.microsoft.com/en-us/cli/azure/param-persist-howto
# for further information
#The efault resource group to use for all commands.
location=

# The default app name to use for az webapp commands.
web=

# The default VM name to use for az vm commands.
vm=

# The default virtual machine scale set (VMSS) name to use for az vmss commands.
vmss=

# The default container registry name to use for az acr commands.
acr=

[storage]
account=yourstorageaccount

# The default access key to use for az storage data-plane commands.
key=xxxxxxxxxxx

# The default SAS token to use for az storage data-plane commands.
sas_token	string=xxxxxxxx

# The default connection string to use for az storage data-plane commands.
connection_string=xxxxxxxxxx

[batchai]
# The default storage account to use for az batchai commands.
storage_account=assaaasasasasas
storage_key=xxxxxxx

[batch]
# The default Azure Batch account name to use for az batch commands.
account=xxxxxxx

# The default access key to use for az batch commands. Only used with aad authorization.
access_key=xxxxxxxx

# The default endpoint to connect to for az batch commands.
endpoint=xxxxxxx

# The authorization mode to use for az batch commands. Can be shared_key or aad.
auth_mode=aad

[extension]
# Install an extension if it's not added yet when running a command from it. The possible values are no (default), yes_prompt, yes_without_prompt.
use_dynamic_install=yes_without_prompt

# Continue to run the command when an extension is dynamically installed for it. Default is False.
run_after_dynamic_install=false






